<UserControl x:Class="PointOfSale.CustomizeSide"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="30" Text="Customize Side"/>
        <StackPanel>
            <RadioButton x:Name="SmallButton" IsChecked="True" GroupName="Size" FontSize="35">Small</RadioButton>
            <RadioButton x:Name="MediumButton" GroupName="Size" FontSize="35">Medium</RadioButton>
            <RadioButton x:Name="LargeButton" GroupName="Size" FontSize="35">Large</RadioButton>
        </StackPanel>

    </StackPanel>
</UserControl>
