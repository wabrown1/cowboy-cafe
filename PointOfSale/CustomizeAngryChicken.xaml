<UserControl x:Class="PointOfSale.CustomizeAngryChicken"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="30" Text="Customize Angry Chicken"/>
        <StackPanel>
            <CheckBox IsChecked="{Binding Path=Pickle}" FontSize="35">Pickle</CheckBox>
            <CheckBox IsChecked="{Binding Path=Bread}" FontSize="35">Bread</CheckBox>
        </StackPanel>

    </StackPanel>
</UserControl>
